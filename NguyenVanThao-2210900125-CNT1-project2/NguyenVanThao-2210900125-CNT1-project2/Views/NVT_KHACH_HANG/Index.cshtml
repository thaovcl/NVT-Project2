@model IEnumerable<NguyenVanThao_2210900125_CNT1_project2.Models.KHACH_HANG>

@{
    ViewBag.Title = "Index";
}

<h2>Tài khoản khách hàng</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr class="table-warning">
        <th>
            @Html.DisplayNameFor(model => model.Ma_KH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ho_ten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tai_khoan)
