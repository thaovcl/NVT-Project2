@model IEnumerable<K22CNT1_NguyenVanThao_2210900125.Models.KHACH_HANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Tài khoản khách hàng</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table table-striped table-bordered">
    <thead class="table-warning">
        <tr>
            <th>Mã khách hàng</th>
            <th>Họ tên</th>
            <th>Mật khẩu </th>
            <th>Địa chỉ</th>
            <th>Điện thoại</th>
            <th>Ngày sinh</th>
            <th>Email</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-success">
                <td>@Html.DisplayFor(modelItem => item.Ma_KH)</td>
                <td>@Html.DisplayFor(modelItem => item.Ho_ten)</td>
                <td>@Html.DisplayFor(modelItem => item.Mat_khau)</td>
                <td>@Html.DisplayFor(modelItem => item.Dia_chi)</td>
                <td>@Html.DisplayFor(modelItem => item.Dien_thoai)</td>
                <td>@string.Format("{0:dd-MM-yyyy}", item.Ngay_sinh)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                    @{
                        var statusText = item.Trang_thai.HasValue && item.Trang_thai.Value == 1 ? "Đang hoạt động" : "Không hoạt động";
                    }
                    <span class="@(item.Trang_thai == 1 ? "text-success" : "text-danger")">@statusText</span>
                </td>
                <td>@Html.DisplayFor(modelItem => item.Mat_khau)</td>
                <td>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Ma_KH }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.Ma_KH }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Bạn có chắc chắn muốn xóa không?');" })
                </td>
            </tr>
        }
    </tbody>
</table>
