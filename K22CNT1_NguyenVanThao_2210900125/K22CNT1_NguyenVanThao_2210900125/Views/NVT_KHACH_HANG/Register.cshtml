@model K22CNT1_NguyenVanThao_2210900125.Models.KHACH_HANG

@{
    ViewBag.Title = "Đăng Ký";
    Layout = null;  // Đảm bảo không sử dụng layout chính cho trang đăng ký
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Travel Regester</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../../Scripts/LayoutAdmin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../Scripts/LayoutAdmin/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- inject:css -->
    <link rel="stylesheet" href="../../Scripts/LayoutAdmin/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="../../Scripts/LayoutAdmin/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                            </div>
                            <h4>Tạo tài khoản mới</h4>
                            <h6 class="font-weight-light">Điền thông tin để đăng ký.</h6>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <!-- Email -->
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Email, new { @class = "form-label", style = "font-weight: bold; color: #555;" })
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-lg", placeholder = "Email", required = true })
                                </div>

                                <!-- Mật khẩu -->
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Mat_khau, new { @class = "form-label", style = "font-weight: bold; color: #555;" })
                                    @Html.PasswordFor(model => model.Mat_khau, new { @class = "form-control form-control-lg", placeholder = "Mật khẩu", required = true })
                                </div>

                                <!-- Họ tên -->
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Ho_ten, new { @class = "form-label", style = "font-weight: bold; color: #555;" })
                                    @Html.TextBoxFor(model => model.Ho_ten, new { @class = "form-control form-control-lg", placeholder = "Họ và tên", required = true })
                                </div>

                                <!-- Ngày sinh -->
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Ngay_sinh, new { @class = "form-label", style = "font-weight: bold; color: #555;" })
                                    @Html.TextBoxFor(model => model.Ngay_sinh, "{0:yyyy-MM-dd}", new { @class = "form-control form-control-lg", type = "date", required = true })
                                </div>

                                <!-- Địa chỉ -->
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Dia_chi, new { @class = "form-label", style = "font-weight: bold; color: #555;" })
                                    @Html.TextBoxFor(model => model.Dia_chi, new { @class = "form-control form-control-lg", placeholder = "Địa chỉ", required = true })
                                </div>

                                <!-- Số điện thoại -->
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Dien_thoai, new { @class = "form-label", style = "font-weight: bold; color: #555;" })
                                    @Html.TextBoxFor(model => model.Dien_thoai, new { @class = "form-control form-control-lg", placeholder = "Số điện thoại", required = true })
                                </div>

                                <!-- Thông báo lỗi -->
                                <div class="form-group">
                                    @if (ViewBag.ErrorMessage != null)
                                    {
                                        <p class="text-danger" style="text-align: center;">@ViewBag.ErrorMessage</p>
                                    }
                                </div>

                                <!-- Nút Đăng Ký -->
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">ĐĂNG KÝ</button>
                                </div>

                                <!-- Liên kết đăng nhập -->
                                <div class="mt-4 text-center">
                                    <p class="text-muted">Đã có tài khoản? <a href="@Url.Action("Login", "NVT_KHACH_HANG")" class="text-primary">Đăng Nhập ngay</a></p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- plugins:js -->
    <script src="../../Scripts/LayoutAdmin/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="../../Scripts/LayoutAdmin/assets/js/off-canvas.js"></script>
    <script src="../../Scripts/LayoutAdmin/assets/js/hoverable-collapse.js"></script>
    <script src="../../Scripts/LayoutAdmin/assets/js/misc.js"></script>
</body>
</html>
