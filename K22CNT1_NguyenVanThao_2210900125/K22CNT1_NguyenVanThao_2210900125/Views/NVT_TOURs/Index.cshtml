@model IEnumerable<K22CNT1_NguyenVanThao_2210900125.Models.TOUR>

@{
    ViewBag.Title = "Danh sách tour";
    <link href="~/Content/DanhSachTour.css" rel="stylesheet" />
    <h2>Danh Sách Tour</h2>
}

<div class="tour-list-container">
    @foreach (var item in Model)
    {
        <div class="tour-item">
            <div class="tour-card">
                <div class="tour-image">
                    <img src="@item.Hinh_anh" class="tour-img" alt="@item.Ten_tour">
                </div>
                <div class="tour-info">
                    <a class="tour-title" href="#">@item.Ten_tour</a>
                    <p class="tour-price">@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:N0} VNĐ", item.Gia_tour)</p>
                    <p>Số lượng: @item.So_nguoi</p>
                    <p>
                        Trạng thái:
                        @if (item.Trang_thai.HasValue && item.Trang_thai.Value == 1)
                        {
                            <span class="badge bg-success">Còn vé</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Hết vé</span>
                        }
                    </p>
                </div>
                <div class="tour-actions">
                    <a href="@Url.Action("AddToCart", "NVTCart", new { id = item.ID, TenTour = item.Ten_tour, HinhAnh = item.Hinh_anh, SoNguoiMua = 1, DonGiaMua = item.Gia_tour })" class="btn btn-primary">
                        Đặt Tour
                    </a>
                </div>
            </div>
        </div>
    }
</div>
