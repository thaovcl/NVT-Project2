@model NguyenVanThao_2210900125_Project2.Models.NHAN_VIEN

@{
    ViewBag.Title = "Cập nhật hình ảnh";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Cập nhật hình ảnh nhân viên: @Model.Username</h2>

@using (Html.BeginForm("CapNhatAnh", "NHAN_VIEN", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Cập nhật hình ảnh</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }

        <div class="form-group">
            <label class="control-label col-md-2" for="FileAnh">Chọn file ảnh</label>
            <div class="col-md-10">
                <input type="file" name="FileAnh" class="form-control" />
                @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại danh sách", "DanhSach", "NHAN_VIEN", null, new { @class = "btn btn-secondary" })
</div>
