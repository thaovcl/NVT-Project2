@{
    ViewBag.Title = "DanhSach";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Danh sách nhân viên</h2>

<table class="table table-striped table-bordered">
    <thead class="table-warning">
        <tr>
            <th>ID</th>
            <th>Họ Tên</th>
            <th>SDT</th>
            <th>Ngày Sinh</th>
            <th>Hình Ảnh</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr class="table-success">
            <td>@item.ID</td>
            <td>@item.TenNhanVien</td>
            <td>@item.SDT</td>
            <td>@item.NgaySinh</td>
            <td>
                <a href="~/Admin/NHAN_VIEN/CapNhatAnh?Username=@item.Username"><img src="@item.HinhAnh" style="height:100px; width:100px" /></a> 
            </td>
            <td>
                @* Nút Edit *@
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-primary btn-sm" })

                @* Nút Delete *@
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Bạn có chắc chắn muốn xóa nhân viên này không?');" })
            </td>
        </tr>
        }
    </tbody>
</table>
