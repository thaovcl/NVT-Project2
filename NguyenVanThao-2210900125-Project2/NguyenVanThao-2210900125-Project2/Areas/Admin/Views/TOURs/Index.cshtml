@model IEnumerable<NguyenVanThao_2210900125_Project2.Models.TOUR>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Tour</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table table-striped table-bordered">
    <thead class="table-warning">
        <tr>
            <th>Tên Tour</th>
            <th>Mô Tả</th>
            <th>Giá Tour</th>
            <th>Thời Gian</th>
            <th>Điểm Khởi Hành</th>
            <th>Điểm Đến</th>
            <th>Hình ảnh</th>
            <th>Trạng Thái</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-success">
                <td>@Html.DisplayFor(modelItem => item.Ten_tour)</td>
                <td>@Html.DisplayFor(modelItem => item.Mo_ta)</td>
                <td>@Html.DisplayFor(modelItem => item.Gia_tour)</td>
                <td>@Html.DisplayFor(modelItem => item.Thoi_gian)</td>
                <td>@Html.DisplayFor(modelItem => item.Diem_khoi_hanh)</td>
                <td>@Html.DisplayFor(modelItem => item.Diem_den)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Hinh_anh))
                    {
                        <img src="@Url.Content("~/Areas/Admin/Data/" + item.Hinh_anh)" style="height:100px; width:100px" alt="Hình ảnh Tour" />
                    }
                    else
                    {
                        <span>Không có ảnh</span>
                    }
                </td>
                <td>
                    @{
                        var statusText = item.Trang_thai.HasValue && item.Trang_thai.Value == 1 ? "Đang hoạt động" : "Không hoạt động";
                    }
                    <span class="@(item.Trang_thai == 1 ? "text-success" : "text-danger")">@statusText</span>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Ma_Tour }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Ma_Tour }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Bạn có chắc chắn muốn xóa không?');" })
                </td>
            </tr>
        }
    </tbody>

</table>
