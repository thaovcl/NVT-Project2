@model IEnumerable<NguyenVanThao_2210900125_Project2.Models.DANH_GIA>

@{
    ViewBag.Title = "Danh sách Đánh Giá";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách Đánh Giá</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table table-striped table-bordered">
    <thead class="table-warning">
        <tr>
            <th>Nội dung</th>
            <th>Điểm số</th>
            <th>Ngày đánh giá</th>
            <th>Họ tên khách</th>
            <th>Tên tour</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-success">
                <td>@Html.DisplayFor(modelItem => item.Noi_dung)</td>
                <td>@Html.DisplayFor(modelItem => item.Diem_so)</td>
                <td>@string.Format("{0:dd-MM-yyyy}", item.Ngay_danh_gia)</td>
                <td>@Html.DisplayFor(modelItem => item.KHACH_HANG.Ho_ten)</td>
                <td>@Html.DisplayFor(modelItem => item.TOUR.Ten_tour)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Ma_danh_gia }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Ma_danh_gia }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Bạn có chắc chắn muốn xóa không?');" })
                </td>
            </tr>
        }
    </tbody>
</table>
